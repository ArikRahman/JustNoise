{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "VAD Event",
  "description": "Voice Activity Detection discrete event (speech start/end)",
  "type": "object",
  "required": ["timestamp", "device_id", "event", "source"],
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp"
    },
    "device_id": {
      "type": "string",
      "description": "Unique identifier for the aggregator device"
    },
    "event": {
      "type": "string",
      "enum": ["speech_start", "speech_end"],
      "description": "Event type: speech_start or speech_end"
    },
    "source": {
      "type": "string",
      "description": "VAD model identifier (e.g., silero_vad_v0)"
    }
  }
}
